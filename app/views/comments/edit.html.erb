<h3>Update Comment</h3>



<%= render @post %>
<div class="container mt-3">
<div class = "m-2">
<h3> New Comment </h3>
</div>
<%= form_with model: [@post, @comment] do |f| %>
<div class="card">
  <div class="card-body">

    <div class="mb-3">
      <h5><%= @comment_author_name %></h5>
    </div>

    <div class="mb-3">
      <%= f.text_area :content, { class: "form-control", placeholder: "Leave your comment.." } %>
    </div>

   
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
     <%= link_to "Back", post_path(@post), class: "btn btn-link"%>
     <%= f.submit "Submit", class: "btn btn-dark" %>
    </div>
    

  </div>
</div>
<% end %>
</div>
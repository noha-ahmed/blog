<div id="<%= dom_id comment %>">
    
  <% user = User.find(comment.user_id) %>
  <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1"> <%=  user.first_name + " " + user.last_name %> </h5>
  </div>
  <p class=""> <%= comment.content %> </p>
    <% if user_signed_in? and comment.user_id == current_user.id %>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <%= link_to "Edit", edit_post_comment_path(comment.post_id,comment), class: 'btn btn-light' %> 
            <%= button_to "Delete",[comment.post, comment], method: :delete, class: 'btn btn-light' %>
        </div>
    <% end %>


</div>


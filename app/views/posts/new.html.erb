


<div class="container m-4">
<%= form_with(model: @post) do |f| %>
<div class="card">
  <div class="card-body">

    <div class="mb-3">
      <h5><%= f.label :author, { class: "form-label"} %></h5>
      <%= f.text_field :author, { class: "form-control", placeholder: "author" } %>
    </div>

    <div class="mb-3">
      <h5><%= f.label :content, { class: "form-label"} %></h5>
      <%= f.text_area :content, { class: "form-control", placeholder: "content" } %>
    </div>

   
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
     <%= link_to "Back to Posts", posts_path, class: "btn btn-link"%>
     <%= f.submit "Submit", class: "btn btn-dark" %>
    </div>
    

  </div>
</div>
<% end %>
</div>

<div class="container m-4">
<%= form_with(model: @post) do |f| %>
<div class="card">
  <div class="card-body">

    
    <div class="mb-3">
      <h5><%= @user.first_name + " " + @user.last_name %></h5>
    </div> 

    <div class="mb-3">
      <%= f.text_area :content, { class: "form-control", placeholder: "What is in your mind?" } %>
    </div>

   
    <%= f.number_field :user_id, { class: "form-control", value: current_user.id, id: :post_user_id, type: :hidden } %>
  

   
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
     <%= link_to "Back to Posts", posts_path, class: "btn btn-link"%>
     <%= f.submit "Submit", class: "btn btn-dark" %>
    </div>
    

  </div>
</div>
<% end %>
</div>
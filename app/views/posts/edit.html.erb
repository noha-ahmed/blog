

<div class="container m-4">
<h3>Update Post Details</h3>
<%= form_with(model: @post) do |f| %>
<div class="card border-dark">
  <div class="card-body">

    <div class="mb-3">
      <h5><%= @post_author_name %></h5>
    </div>

    <div class="mb-3">
      <%= f.text_area :content, { class: "form-control", placeholder: "content" } %>
    </div>

   
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
     <%= link_to "Back to Post", post_path(@post), class: "btn btn-link"%>
     <%= f.submit "Submit", class: "btn btn-dark" %>
    </div>
    

  </div>
</div>
<% end %>
</div>